{
  "name": "r5-helper",
  "displayName": "r5-helper",
  "publisher": "cl1107",
  "description": "auto fill component template",
  "version": "0.1.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.58.0"
  },
  "icon": "images/R5.png",
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "homepage": "https://github.com/cl1107/r5-helper/blob/main/README.md",
  "repository": "https://github.com/cl1107/r5-helper",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "r5-helper",
      "properties": {
        "r5-helper.autoFillComponentCode": {
          "type": "boolean",
          "default": true,
          "description": "在 src/ 文件夹下创建 index.j[t]sx 文件后，自动根据文件名补全组件声明代码"
        },
        "r5-helper.autoCreateStyleFile": {
          "type": "boolean",
          "default": true,
          "description": "创建 index.j[t]sx 文件后是否创建index.[c,le,sa,sc]ss文件"
        },
        "r5-helper.cssModules": {
          "type": "boolean",
          "default": false,
          "description": "是否以cssModules的方式引入样式文件"
        },
        "r5-helper.styleFileType": {
          "type": "string",
          "enum": [
            "css",
            "less",
            "sass",
            "scss"
          ],
          "default": "less",
          "description": "type of the style file,less or css or sass or scss"
        }
      }
    },
    "snippets": [
      {
        "language": "javascript",
        "path": "./snippets/index.code-snippets"
      },
      {
        "language": "typescript",
        "path": "./snippets/index.code-snippets"
      },
      {
        "language": "javascriptreact",
        "path": "./snippets/index.code-snippets"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/index.code-snippets"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "glob": "^8.1.0",
    "mocha": "^8.4.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "minimatch": "^7.4.2"
  }
}
